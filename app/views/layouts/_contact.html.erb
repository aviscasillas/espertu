<section id="contact" class="container content-section text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2><%= t('contact.title') %></h2>
      <p><%= t('contact.p1') %>
      <%= form_for(@contact, remote: true, authenticity_token: true) do |f| %>
          <%= f.text_field :name, required: true %>
          <%= f.email_field :email, required: true %>
          <%= f.text_area :message, required: true, input_html: {rows: 10} %>
          <div class='form-actions'>
              <%= f.submit 'Send message', class: 'btn btn-primari' %>
          </div>
      <% end %>
      <ul class="list-inline banner-social-buttons">
        <li>
          <a href="https://www.facebook.com/groups/179372658783671/?fref=ts" class="btn btn-default btn-lg">
            <i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span>
          </a>
        </li>
        <li>
          <a href="http://associacioespertu.blogspot.com.es/" class="btn btn-default btn-lg">
            <i class="fa fa-github fa-fw"></i> <span class="network-name">Blogspot</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</section>
